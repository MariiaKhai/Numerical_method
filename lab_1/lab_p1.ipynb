   "source": [
    "#задание исходной функции\n",
    "def f(x): \n",
    "    return x*x + 3*x -12"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 5,
   "metadata": {},
   "outputs": [],
   "source": [
    "#условие с циклом, которое реализует основной алгоритм дихотомии\n",
    "def dihotomia(a, b, eps): \n",
    "    if f(a) * f(b) > 0: \n",
    "        return (0, 0) \n",
    "    else: \n",
    "        c = 0 \n",
    "        n = 0 \n",
    "        while (abs(b-a) > 2 * eps): \n",
    "            c = (a + b) / 2 \n",
    "            if f(a) * f(c) < 0: \n",
    "                b = c \n",
    "            else: \n",
    "                a = c \n",
    "            n += 1 \n",
    "        return (c, n) "
   ]
